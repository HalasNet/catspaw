<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">
	<named-query name="findPermissionsByRoleCode">
		<query>
			<![CDATA[
				select elements(r.permissions) from Role r where r.code = ?
			]]>
		</query>
	</named-query>
	<entity name="Permission"
		class="org.catspaw.cherubim.security.rbac.model.PermissionModel">
		<table name="rbac_permission" />
		<attributes>
			<id name="id" />
			<basic name="code" />
			<basic name="domainId">
				<column name="domain_id" />
			</basic>
			<basic name="domainCode">
				<column name="domain_code" />
			</basic>
			<basic name="actionId">
				<column name="action_id" />
			</basic>
			<basic name="actionCode">
				<column name="action_code" />
			</basic>
			<basic name="instance" />
		</attributes>
	</entity>
</entity-mappings>